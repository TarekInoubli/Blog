@page "/"
@inject ISyncLocalStorageService LocalStorage

<AuthorizeView>
    <NotAuthorized>
        <h1>Welcome to my blog!</h1>
        Here are my latest posts. Enjoy!
    </NotAuthorized>
    <Authorized>
        <h1>Welcome back, @LocalStorage.GetItemAsString("username")!</h1>
    </Authorized>
</AuthorizeView>

<BlogPosts />
